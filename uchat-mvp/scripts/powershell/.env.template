# ============================================================================
# Environment Variables Template for Uchat MVP
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials to version control!
# ============================================================================

# Oracle Database Configuration
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=XEPDB1
ORACLE_USER=uchat_admin
ORACLE_PASSWORD=change_me_oracle_password
ORACLE_CONNECTION_STRING=${ORACLE_USER}/${ORACLE_PASSWORD}@${ORACLE_HOST}:${ORACLE_PORT}/${ORACLE_SERVICE_NAME}

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=uchat
MONGO_USER=uchat_admin
MONGO_PASSWORD=change_me_mongo_password
# Connection string format: mongodb://[username:password@]host[:port][/database][?options]
MONGO_CONNECTION_STRING=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DATABASE}?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis_password
REDIS_DB=0
REDIS_SSL=false
REDIS_CONNECTION_STRING=${REDIS_HOST}:${REDIS_PORT},password=${REDIS_PASSWORD},ssl=${REDIS_SSL},abortConnect=False

# JWT Configuration
JWT_SECRET=change_me_jwt_secret_at_least_32_characters_long_for_security
JWT_ISSUER=uchat-server
JWT_AUDIENCE=uchat-client
JWT_EXPIRATION_MINUTES=60

# Server Configuration
SERVER_PORT=5000
SERVER_HOST=localhost
SERVER_URL=http://${SERVER_HOST}:${SERVER_PORT}
WEBSOCKET_PATH=/ws

# Password Hashing Configuration
BCRYPT_WORK_FACTOR=12

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=logs/uchat-server.log
LOG_RETENTION_DAYS=30

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
MESSAGE_RATE_LIMIT_PER_MINUTE=30

# Environment
ASPNETCORE_ENVIRONMENT=Development

# ============================================================================
# Demo/Seed Data Configuration
# ============================================================================
SEED_DATA_ENABLED=true
DEMO_USER_COUNT=10
DEMO_CHAT_COUNT=5
DEMO_MESSAGE_COUNT=50
