<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ImageSource x:Key="AppBackgroundImageSource">/Views/bg_uchat.png</ImageSource>
    <SolidColorBrush x:Key="AppBackgroundFallbackBrush" Color="#FF101010"/>
    
    <!-- ДОБАВЛЕНО для вашего SettingsView -->
    <SolidColorBrush x:Key="AppOverlayBrush" Color="#99000000"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="White"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#90FFFFFF"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="TextInverseBrush" Color="Black"/>
    <SolidColorBrush x:Key="GlassPanelBackgroundBrush" Color="#0DFFFFFF"/>
    
    <LinearGradientBrush x:Key="GlassPanelBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#60FFFFFF" Offset="0.0"/>
        <GradientStop Color="#00FFFFFF" Offset="0.5"/>
        <GradientStop Color="#20FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#20FFFFFF"/>

    <SolidColorBrush x:Key="NavButtonBackgroundBrush" Color="#33354E"/>
    <SolidColorBrush x:Key="NavButtonHoverBrush" Color="#4E517A"/>
    <SolidColorBrush x:Key="NavButtonPressedBrush" Color="#2A2C40"/>
    <SolidColorBrush x:Key="IconBrush" Color="White"/>

    <SolidColorBrush x:Key="MessageBubbleMeBrush" Color="#25FFFFFF"/>
    <SolidColorBrush x:Key="MessageBubbleMeBorderBrush" Color="#30FFFFFF"/>
    <SolidColorBrush x:Key="MessageBubbleOtherBrush" Color="#40000000"/>
    
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#25FFFFFF"/>
    <SolidColorBrush x:Key="SearchInputBackgroundBrush" Color="#20FFFFFF"/>

    <SolidColorBrush x:Key="AccentColorBrush" Color="#FF00CC6A"/>
    <SolidColorBrush x:Key="ErrorColorBrush" Color="#FF6B6B"/>
    <SolidColorBrush x:Key="CodePreviewBrush" Color="#007ACC"/>

    <!-- Profile Modal Colors -->
    <SolidColorBrush x:Key="ProfileOverlayBrush" Color="#D9000000"/>
    <LinearGradientBrush x:Key="ProfileModalBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#DD1A1A2E" Offset="0"/>
        <GradientStop Color="#DD16213E" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ProfileModalBorderBrush" Color="#40FFFFFF"/>
    <SolidColorBrush x:Key="ProfileHeaderTextBrush" Color="White"/>
    <SolidColorBrush x:Key="ProfileSubtextBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="ProfileEmailTextBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ProfileAvatarBorderBrush" Color="#FFD700"/>
    <SolidColorBrush x:Key="ProfileAvatarBackgroundBrush" Color="#252545"/>
    <SolidColorBrush x:Key="ProfileStatBackgroundBrush" Color="#20FFFFFF"/>
    <SolidColorBrush x:Key="ProfileButtonBackgroundBrush" Color="#20FFFFFF"/>
    <SolidColorBrush x:Key="ProfileButtonHoverBrush" Color="#30FFFFFF"/>
    <SolidColorBrush x:Key="ProfileAccentButtonBrush" Color="#6495ED"/>
    <SolidColorBrush x:Key="ProfileAccentButtonHoverBrush" Color="#4682B4"/>
    <SolidColorBrush x:Key="ProfileDangerTextBrush" Color="#FF4444"/>

    <!-- Transparent ScrollBar Style -->
    <Style x:Key="TransparentScrollBarThumb" TargetType="{x:Type Thumb}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border Background="#30FFFFFF" CornerRadius="4" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Grid>
                        <Border Background="Transparent" CornerRadius="4" Margin="2,0"/>
                        <Track Name="PART_Track" IsDirectionReversed="True">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource TransparentScrollBarThumb}"/>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="8"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>