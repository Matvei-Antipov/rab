<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ImageSource x:Key="AppBackgroundImageSource">/Views/bg_l_uchat.png</ImageSource>
    <SolidColorBrush x:Key="AppBackgroundFallbackBrush" Color="#CB000000"/>

    <LinearGradientBrush x:Key="AppOverlayBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#66000000" Offset="0.0"/>
        <GradientStop Color="#00000000" Offset="2"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#222222"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#80000000"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#909090"/>
    <SolidColorBrush x:Key="TextInverseBrush" Color="White"/>

    <SolidColorBrush x:Key="GlassPanelBackgroundBrush" Color="#35FFFFFF"/>
    <LinearGradientBrush x:Key="GlassPanelBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#50FFFFFF" Offset="0.0"/>
        <GradientStop Color="#20FFFFFF" Offset="0.5"/>
        <GradientStop Color="#30FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#25000000"/>

    <SolidColorBrush x:Key="NavButtonBackgroundBrush" Color="#80E0E0E5"/>
    <SolidColorBrush x:Key="NavButtonHoverBrush" Color="#A0D0D0D5"/>
    <SolidColorBrush x:Key="NavButtonPressedBrush" Color="#C0C0C5"/>
    <SolidColorBrush x:Key="IconBrush" Color="#33354E"/>

    <SolidColorBrush x:Key="ChatListSelectedBrush" Color="#D6E4FF"/>
    <SolidColorBrush x:Key="ChatListHoverBrush" Color="#80D6E4FF"/>

    <SolidColorBrush x:Key="MessageBubbleMeBrush" Color="#FFAFAFAF"/>
    <SolidColorBrush x:Key="MessageBubbleMeBorderBrush" Color="#FFC5C5C5"/>
    <SolidColorBrush x:Key="MessageBubbleOtherBrush" Color="#80F0F0F0"/>
    
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#20FFFFFF"/>
    <SolidColorBrush x:Key="SearchInputBackgroundBrush" Color="#30FFFFFF"/>

    <SolidColorBrush x:Key="AccentColorBrush" Color="#00A055"/>
    <SolidColorBrush x:Key="ErrorColorBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="CodePreviewBrush" Color="#0066B8"/>

    <!-- Profile Modal Colors -->
    <SolidColorBrush x:Key="ProfileOverlayBrush" Color="#E0000000"/>
    <LinearGradientBrush x:Key="ProfileModalBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F0F5F5F5" Offset="0"/>
        <GradientStop Color="#F0E8E8E8" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ProfileModalBorderBrush" Color="#60FFFFFF"/>
    <SolidColorBrush x:Key="ProfileHeaderTextBrush" Color="#222222"/>
    <SolidColorBrush x:Key="ProfileSubtextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="ProfileEmailTextBrush" Color="#444444"/>
    <SolidColorBrush x:Key="ProfileAvatarBorderBrush" Color="#FFD700"/>
    <SolidColorBrush x:Key="ProfileAvatarBackgroundBrush" Color="#D0D0D5"/>
    <SolidColorBrush x:Key="ProfileStatBackgroundBrush" Color="#30FFFFFF"/>
    <SolidColorBrush x:Key="ProfileButtonBackgroundBrush" Color="#30FFFFFF"/>
    <SolidColorBrush x:Key="ProfileButtonHoverBrush" Color="#50FFFFFF"/>
    <SolidColorBrush x:Key="ProfileAccentButtonBrush" Color="#4682B4"/>
    <SolidColorBrush x:Key="ProfileAccentButtonHoverBrush" Color="#5B9BD5"/>
    <SolidColorBrush x:Key="ProfileDangerTextBrush" Color="#D32F2F"/>

    <!-- Transparent ScrollBar Style -->
    <Style x:Key="TransparentScrollBarThumb" TargetType="{x:Type Thumb}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border Background="#40000000" CornerRadius="4" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Grid>
                        <Border Background="Transparent" CornerRadius="4" Margin="2,0"/>
                        <Track Name="PART_Track" IsDirectionReversed="True">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource TransparentScrollBarThumb}"/>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="8"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>