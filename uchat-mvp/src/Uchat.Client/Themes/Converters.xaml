<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:converters="clr-namespace:Uchat.Client.Converters">

    <!-- Boolean to Visibility Converter -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <!-- String to Visibility Converter -->
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

    <!-- First Character Converter -->
    <converters:FirstCharacterConverter x:Key="FirstCharacterConverter"/>

    <!-- Inverse Boolean Converter -->
    <sys:Boolean x:Key="True">True</sys:Boolean>
    <sys:Boolean x:Key="False">False</sys:Boolean>

    <!-- Null to Visibility Converter - placeholder -->
    <BooleanToVisibilityConverter x:Key="NullToVisibilityConverter"/>

    <!-- Inverse Boolean Converter - placeholder -->
    <BooleanToVisibilityConverter x:Key="InverseBooleanConverter"/>

    <!-- Other converters - placeholders -->
    <BooleanToVisibilityConverter x:Key="NullToBooleanConverter"/>
    <BooleanToVisibilityConverter x:Key="BooleanToAlignmentConverter"/>
    <BooleanToVisibilityConverter x:Key="BooleanToOpacityConverter"/>
</ResourceDictionary>
