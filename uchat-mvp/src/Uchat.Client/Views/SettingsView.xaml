<UserControl x:Class="Uchat.Client.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1100"
             FontFamily="Segoe UI"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display">

    <UserControl.Resources>
        <Style x:Key="SeparatorLineStyle" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="#25FFFFFF"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0"/> </Style>

        <Style TargetType="Button" x:Key="RoundNavButtonStyle">
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#33354E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
						<Border x:Name="ButtonBorder" CornerRadius="21" Background="{TemplateBinding Background}">
							<Border.Effect>
								<DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="5" ShadowDepth="2"/>
							</Border.Effect>

							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>

						<ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#4E517A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CircleCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <Grid Width="22" Height="22" Margin="0,0,12,0" VerticalAlignment="Center">
                                <Ellipse Stroke="#90FFFFFF" StrokeThickness="1" Fill="Transparent"/>
                                <Path x:Name="CheckMark" 
                                      Data="M 5,11 L 9,15 L 17,6" 
                                      Stroke="White" StrokeThickness="1.5" 
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CircleRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Grid Grid.Column="1" Width="22" Height="22" Margin="15,0,0,0" VerticalAlignment="Center">
                                <Ellipse Stroke="#90FFFFFF" StrokeThickness="1" Fill="Transparent"/>
                                <Ellipse x:Name="Dot" Width="12" Height="12" Fill="White" Visibility="Collapsed"/>
                            </Grid>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Dot" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassPanelBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#CC121216"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#35FFFFFF" Offset="0.0"/>
                        <GradientStop Color="#05FFFFFF" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="20" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="bg_uchat.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#D0050508"/>

        <Grid x:Name="LayoutRoot">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/> <ColumnDefinition Width="*"/>  </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Border CornerRadius="24" Background="#10FFFFFF"/>
                    <Border Style="{StaticResource GlassPanelBorderStyle}"/>
                    
                    <StackPanel VerticalAlignment="Top" Margin="0,20,0,0" HorizontalAlignment="Center">
                        <Button Style="{StaticResource RoundNavButtonStyle}"/>
                        <Button Style="{StaticResource RoundNavButtonStyle}"/>
                        <Button Style="{StaticResource RoundNavButtonStyle}"/>
                        <Button Style="{StaticResource RoundNavButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Border CornerRadius="24" Background="#10FFFFFF"/>
                    <Border Style="{StaticResource GlassPanelBorderStyle}"/>
                    
                    <StackPanel Margin="0,20" HorizontalAlignment="Center">
                        <Button Style="{StaticResource RoundNavButtonStyle}" Background="#5B4B6F" ToolTip="Gallery">
                            <TextBlock Text="&#xE91B;" FontFamily="Segoe MDL2 Assets" FontSize="18"/>
                        </Button>
                        <Button Style="{StaticResource RoundNavButtonStyle}" Background="#8C7B30" ToolTip="Theme">
                            <TextBlock Text="&#xE708;" FontFamily="Segoe MDL2 Assets" FontSize="18"/>
                        </Button>
                        <Button Style="{StaticResource RoundNavButtonStyle}" Background="#4E5165" ToolTip="Settings">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="18"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="650" Style="{StaticResource GlassPanelBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="35,25">
                            <TextBlock Text="Settings" FontSize="28" Foreground="#E0E0E0" FontWeight="Light" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.7">
                                <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="ID:123456789" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="1" Style="{StaticResource SeparatorLineStyle}"/>

                        <Grid Grid.Row="2" Margin="35,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Build: 2025-05-20" Foreground="#60FFFFFF" FontSize="11"/>
                            <TextBlock Grid.Column="1" Text="Version: 1.0.0-beta.1" Foreground="#60FFFFFF" FontSize="11" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Privacy &amp; Security Terms" Foreground="#80FFFFFF" FontSize="11" HorizontalAlignment="Right" Cursor="Hand" TextDecorations="Underline"/>
                        </Grid>

                        <Border Grid.Row="3" Style="{StaticResource SeparatorLineStyle}"/>

                        <StackPanel Grid.Row="4" Margin="0,30">
                            <Grid Width="110" Height="110">
                                <Ellipse>
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#EEDC9A" BlurRadius="30" Opacity="0.2" ShadowDepth="0"/>
                                    </Ellipse.Effect>
                                    <Ellipse.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#F0E6B5" Offset="0"/>
                                            <GradientStop Color="#C4A068" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="&#xE722;" FontFamily="Segoe MDL2 Assets" FontSize="44" Foreground="#503010" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <Border Background="#25FFFFFF" CornerRadius="18" HorizontalAlignment="Center" Margin="0,20,0,0" Padding="20,8" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="User_000001" Foreground="White" FontSize="15" FontWeight="SemiBold"/>
                                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="10,0,0,0" FontSize="12" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Border Grid.Row="5" Style="{StaticResource SeparatorLineStyle}"/>

                        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15">
                            <TextBlock Text="g-mail: devly.official@gmail.com" Foreground="#CCCCCC" FontSize="14"/>
                            <TextBlock Text="&#xE8A7;" FontFamily="Segoe MDL2 Assets" Foreground="#CCCCCC" Margin="10,2,0,0" VerticalAlignment="Center" Cursor="Hand" FontSize="14"/>
                        </StackPanel>

                        <Border Grid.Row="7" Style="{StaticResource SeparatorLineStyle}"/>

                        <Grid Grid.Row="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1"/> <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="35,20">
                                <TextBlock Text="Notifications" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,0,0,15" FontSize="14"/>
                                <CheckBox Content="Message notifications" Style="{StaticResource CircleCheckBoxStyle}"/>
                                <CheckBox Content="Sound enabled" IsChecked="True" Style="{StaticResource CircleCheckBoxStyle}"/>
                                <CheckBox Content="Show preview" Style="{StaticResource CircleCheckBoxStyle}"/>
                            </StackPanel>

                            <Border Grid.Column="1" Background="#25FFFFFF" VerticalAlignment="Stretch"/>

                            <StackPanel Grid.Column="2" Margin="35,20">
                                <TextBlock Text="Language" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,0,0,15" FontSize="14"/>
                                <RadioButton GroupName="Lang" Content="Ukrainian" Style="{StaticResource CircleRadioButtonStyle}"/>
                                <RadioButton GroupName="Lang" Content="Deutsch" Style="{StaticResource CircleRadioButtonStyle}"/>
                                <RadioButton GroupName="Lang" Content="English" IsChecked="True" Style="{StaticResource CircleRadioButtonStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="9" Style="{StaticResource SeparatorLineStyle}"/>

                        <StackPanel Grid.Row="10" Margin="35,20">
                            <TextBlock Text="Privacy &amp; Security" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,0,0,15" FontSize="14"/>
                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" Content="Show online status" IsChecked="True" Style="{StaticResource CircleCheckBoxStyle}"/>
                                <CheckBox Grid.Column="2" Content="Allow others to find me" IsChecked="True" Style="{StaticResource CircleCheckBoxStyle}"/>
                            </Grid>
                        </StackPanel>

                        <Border Grid.Row="11" Style="{StaticResource SeparatorLineStyle}"/>

                        <Button Grid.Row="12" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,25">
							<TextBlock Text="L O G O U T" Foreground="#AAAAAA" FontSize="13" FontWeight="SemiBold"/>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextBlock.Foreground" Value="White"/>
                                            <Setter Property="TextBlock.FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>