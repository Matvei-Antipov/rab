<UserControl x:Class="Uchat.Client.Views.FilesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1100"
             FontFamily="Segoe UI"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display">

    <UserControl.Resources>
        <Style x:Key="GlassPanelBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource GlassPanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource GlassPanelBorderBrush}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="20" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SeparatorLineStyle" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource SeparatorBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style TargetType="Button" x:Key="RoundNavButtonStyle">
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{DynamicResource NavButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource IconBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" CornerRadius="21" Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="5" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource NavButtonHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FileActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{DynamicResource NavButtonBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                CornerRadius="8" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource NavButtonHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Background Image -->
        <Image Source="{DynamicResource AppBackgroundImageSource}" Stretch="UniformToFill"/>

        <!-- Overlay -->
        <Border Background="{DynamicResource AppOverlayBrush}"/>

        <!-- Main Content -->
        <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Width="750" Margin="0,50">
            <Border Style="{StaticResource GlassPanelBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header Row -->
                    <Grid Grid.Row="0" Margin="35,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Back Button -->
                        <Button Grid.Column="0" 
                                Style="{StaticResource RoundNavButtonStyle}"
                                Command="{Binding NavigateBackCommand}"
                                HorizontalAlignment="Left">
                            <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>

                        <!-- Title -->
                        <TextBlock Grid.Column="1" 
                                   Text="Files"
                                   FontSize="28" 
                                   FontWeight="Light"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <!-- File Count -->
                        <TextBlock Grid.Column="2" 
                                   FontSize="13" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Opacity="0.8"
                                   VerticalAlignment="Center">
                            <Run Text="{Binding FilesList.Count, Mode=OneWay}"/>
                            <Run Text="files"/>
                        </TextBlock>
                    </Grid>

                    <!-- Separator Line -->
                    <Border Grid.Row="1" Style="{StaticResource SeparatorLineStyle}"/>

                    <!-- Files List -->
                    <ScrollViewer Grid.Row="2" 
                                  VerticalScrollBarVisibility="Hidden"
                                  Padding="35,20,35,35">
                        <ItemsControl ItemsSource="{Binding FilesList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource GlassPanelBackgroundBrush}"
                                            BorderBrush="{DynamicResource SeparatorBrush}"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="15"
                                            Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- File Icon -->
                                            <Border Grid.Column="0" 
                                                    Width="50" Height="50"
                                                    Background="#15000000"
                                                    CornerRadius="10"
                                                    Margin="0,0,15,0">
                                                <TextBlock Text="{Binding Icon}" 
                                                           FontFamily="Segoe MDL2 Assets"
                                                           FontSize="26"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- File Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FileName}" 
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding FormattedSize}" 
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="2"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <Button Content="Save As"
                                                        Style="{StaticResource FileActionButtonStyle}"
                                                        Command="{Binding DataContext.SaveAttachmentAsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                                <Button Content="Download"
                                                        Style="{StaticResource FileActionButtonStyle}"
                                                        Command="{Binding DataContext.DownloadAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                                <Button Content="Open"
                                                        Style="{StaticResource FileActionButtonStyle}"
                                                        Background="{DynamicResource AccentColorBrush}"
                                                        Command="{Binding DataContext.OpenAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
