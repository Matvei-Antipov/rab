<UserControl x:Class="Uchat.Client.Views.CodePreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonEdit="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
             Background="#1E1E1E">
    
    <UserControl.Resources>
        <!-- VS Code Dark Theme Colors - Self-contained resources -->
        <SolidColorBrush x:Key="CodeBackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="CodeHeaderBackgroundBrush" Color="#252526"/>
        <SolidColorBrush x:Key="CodeBorderBrush" Color="#3E3E42"/>
        <SolidColorBrush x:Key="CodeTextBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="CodeTextSecondaryBrush" Color="#858585"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="&#xE943;" FontFamily="Segoe MDL2 Assets" FontSize="16" 
                               Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="FileNameTextBlock" Text="code.py" FontSize="14" 
                               Foreground="#CCCCCC" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="LanguageTextBlock" Text="Python" FontSize="12" 
                               Foreground="#858585" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock x:Name="LineSizeTextBlock" Text="0 lines â€¢ 0 B" FontSize="12" 
                               Foreground="#858585" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
         
        <avalonEdit:TextEditor Grid.Row="1"
                               x:Name="CodeEditor"
                               FontFamily="Consolas, Courier New"
                               FontSize="14"
                               ShowLineNumbers="True"
                               IsReadOnly="True"
                               WordWrap="False"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               Padding="5,10,5,10"/>
    </Grid>
</UserControl>
