<Window x:Class="Uchat.Client.Views.ExampleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Example Window" 
        Height="450" 
        Width="800"
        Background="{DynamicResource BackgroundBrush}">
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E8AD6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Code Preview Example" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#CCCCCC"
                   Margin="0,0,0,20"/>
        
        <!-- Content Area -->
        <Border Grid.Row="1" 
                Background="#252526" 
                BorderBrush="#3E3E42" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="15">
            <StackPanel>
                <TextBlock Text="Welcome to Code Preview Demo" 
                           FontSize="16" 
                           Foreground="#CCCCCC"
                           Margin="0,0,0,10"/>
                
                <TextBox Text="Enter your message here..."
                         Background="#1E1E1E"
                         Foreground="#D4D4D4"
                         BorderBrush="#3E3E42"
                         Padding="10"
                         FontSize="14"
                         Height="100"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
                
                <ListBox Background="#1E1E1E"
                         BorderBrush="#3E3E42"
                         Margin="0,15,0,0"
                         Height="150">
                    <ListBoxItem Content="C# (.cs)" Foreground="#C586C0"/>
                    <ListBoxItem Content="Python (.py)" Foreground="#4EC9B0"/>
                    <ListBoxItem Content="JavaScript (.js)" Foreground="#DCDCAA"/>
                    <ListBoxItem Content="XAML (.xaml)" Foreground="#CE9178"/>
                </ListBox>
            </StackPanel>
        </Border>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Preview" 
                    Style="{StaticResource ModernButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="Close" 
                    Style="{StaticResource ModernButtonStyle}"
                    Background="#3A3A3A"/>
        </StackPanel>
    </Grid>
</Window>
